# ========================================
# DJANGO SETTINGS
# ========================================
DJANGO_SETTINGS_MODULE=movie_nexus.settings.development
SECRET_KEY=django-secret-key-here
DEBUG=True
ENVIRONMENT=development
ALLOWED_HOSTS=localhost,127.0.0.1,0.0.0.0,web

# ========================================
# Database Configuration
# ========================================
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password
DB_HOST=localhost
DB_PORT=5432

# ========================================
# REDIS CONFIGURATION
# ========================================
REDIS_URL=redis://localhost:6379/1

# ========================================
# INTERNATIONALIZATION
# ========================================
LANGUAGE_CODE=en-us
TIME_ZONE=UTC
USE_I18N=True
USE_TZ=True

# ========================================
# EMAIL CONFIGURATION
# ========================================
EMAIL_BACKEND=django.core.mail.backends.console.EmailBackend
DEFAULT_FROM_EMAIL=noreply@example.com
EMAIL_HOST=localhost
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your_email_user
EMAIL_HOST_PASSWORD=your_email_password

# ========================================
# SITE CONFIGURATION
# ========================================
SITE_NAME=Movie Nexus
FRONTEND_URL=http://localhost:3000

# ========================================
# TMDB API CONFIGURATION
# ========================================
TMDB_API_KEY=your_tmdb_api_key
TMDB_READ_ACCESS_TOKEN=your_tmdb_read_access_token

# ========================================
# CELERY CONFIGURATION
# ========================================
CELERY_BROKER_URL=redis://127.0.0.1:6379/3
CELERY_RESULT_BACKEND=redis://127.0.0.1:6379/4
CELERY_TASK_ALWAYS_EAGER=True
USE_CELERY_BACKGROUND_TASKS=False

# ========================================
# CORS CONFIGURATION
# ========================================
CORS_ALLOW_ALL_ORIGINS=True
CORS_ALLOW_CREDENTIALS=True

# ========================================
# SUPERUSER CONFIGURATION
# ========================================
DJANGO_SUPERUSER_EMAIL=superuser@example.com
DJANGO_SUPERUSER_PASSWORD=superuser_password
DJANGO_SUPERUSER_FIRST_NAME=FirstName
DJANGO_SUPERUSER_LAST_NAME=LastName
